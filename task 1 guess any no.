#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;

int main() {
    srand(time(0));
    int mysteryno = rand() % 100 + 1;
    int guess;
    cout << "Guess the number (between 1 and 100): ";
    while (true) {
        cin >> guess;

        if (guess < mysteryno) {
            cout << "Too low! Try again: ";
        } else if (guess > mysteryno) {
            cout << "Too high! Try again: ";
        } else {
            cout << "Congratulations! You guessed the correct number: " << mysteryno << endl;
            break;
        }
    }

    return 0;
}
